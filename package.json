{
  "name": "ma-grid",
  "version": "1.1.0",
  "description": "GitHub-style activity heatmap for Math Academy",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt zip",
    "dev:firefox": "wxt --browser firefox --mv2",
    "build:firefox": "wxt zip --browser firefox --mv2",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/bun": "latest",
    "@types/chrome": "^0.0.329",
    "happy-dom": "^20.0.11",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0",
    "wxt": "^0.20.13"
  },
  "private": true,
  "dependencies": {
    "jsx-dom": "^8.1.6"
  }
}
